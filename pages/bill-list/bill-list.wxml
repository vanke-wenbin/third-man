<view class="fixed-bottom-container bill-list">
  <view class="content">
    <page-title title="全部账单" style="background-color:#fff;"/>
    <view
      wx:for="{{bills}}"
      wx:for-item="year"
      wx:key="bill-list"
    >
      <list title="{{year.title}}年">
        <view
          class="bill-list-item"
          wx:for="{{year.data}}"
          wx:key="bill-list-item"
        >
          <view class="bill-list-item-icon">
            <image
              wx:if="{{item.unpaid > 0}}"
              class="icon-md"
              src="../../assets/images/icon_{{item.selected ? 'select' : 'unselect'}}.svg"
              mode="scaleToFill"
            />
          </view>
          <list-item
            style="flex:1"
            label="{{item.mth}}月份账单"
            data="¥ {{item.expenses}}"
            last="{{index === year.data.length - 1}}"
          />
          </view>
      </list>
    </view>
    <view wx:if="{{bills.length === 0}}">
      <empty-list
        text="暂无往期账单"
      />
    </view>
    <view wx:else class="bill-list-no-more">
      <text>- 没有更多记录了 -</text>
    </view>
  </view>
  <view class="bottom-bar">
    <view class="actions">
      <button
        type="primary"
        bindtap="onPay"
      >
        去缴费
        <image
          class="icon-md"
          src="../../assets/images/icon_arrow_right.svg"
          mode="scaleToFill"
        />
      </button>
    </view>
  </view>
</view>
