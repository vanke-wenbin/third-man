.bill-fee-item {
  color: #454545;
}

.main-item {
}


.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sub-item {
  padding-left: 40px;
  background-color: #fff;
}

.sub-item .item {
  overflow: hidden;
  position: relative;
  padding: 20px;
}
.sub-item .item::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 0.5px;
  background-color: #eaeaea;
  transform: translateX(20px);
}

.item .label {
  font-size: 16px;
}
.item .data {
  display: flex;
  flex-direction: column;
  text-align: right;
}
.item .data .amount {
  font-size: 14px;
  font-weight: 600;
}
.item .data .not-pay {
  color: #ef7c79;
  font-size: 10px;
}
