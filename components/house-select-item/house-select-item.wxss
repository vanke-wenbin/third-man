.house-select-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 20px 12px 0;
  border-bottom: 1px solid #ececec;
}

.left {
  display: flex;
  align-items: center;
}

.identity {
  width: 48px;
  height: 48px;
  margin-right: 16px;
  border-radius: 8px;
  line-height: 48px;
  text-align: center;
  font-size: 12px;
  color: #fff;
}

.identity-owner {
  background-color: #998fb7;
}

.identity-family {
  background-color: #7B94C8;
}

.identity-tenant {
  background-color: #99C5A8;
}

.identity-tourist {
  background-color: #ff8f69;
}

.name {
  display: flex;
  flex-direction: column;
}

.project-name {
  margin-bottom:4.5px;
  font-size: 16px;
  color: #393939;
}

.building-name {
  font-size: 12px;
  color: #a2a2a2;
}

.right {
  font-size: 16px;
  color: #909090;
}
