.check-item {
  overflow: hidden;
  position: relative;
  display: flex;
  align-items: center;
  padding: 16px 20px;
  background-color: #fff;
}
.check-item::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 0.5px;
  background-color: #eaeaea;
  transform: translateX(20px);
}
.check-item .checkbox {
  width: 20px;
  height: 20px;
  margin: 2px;
}
.check-item .content {
  flex: 1;
  padding-left: 16px;
}